{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "exclude": ["out/"],
  "compilerOptions": {
    "noUncheckedIndexedAccess": false,

    "module": "commonjs",

    "newLine": "lf",
    "noEmit": true,
    "removeComments": true,

    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,

    "target": "es2020",
    "useDefineForClassFields": true
  }
}
